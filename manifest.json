{
  "manifest_version": 3,
  "name": "ChromeLock",
  "version": "1.0",
  "description": "Locks Chrome browser with password protection",
  "permissions": [
    "storage",
    "tabs",
    "windows",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/lock_icon.svg",
      "48": "images/lock_icon.svg",
      "128": "images/lock_icon.svg"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  }
}
